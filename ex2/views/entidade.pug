doctype html
html
  head
    title Entidade #{entidade}
  body
    h1 Entidade #{entidade}
    p NIPC: #{nipc}
    h2 Contratos
    table(border="1")
      tr
        th idcontrato
        th objectoContrato
        th dataCelebracaoContrato
        th precoContratual
      each contrato in contratos
        tr
          td
            a(href=`/${contrato.idcontrato}`) #{contrato.idcontrato}
          td #{contrato.objectoContrato}
          td #{contrato.dataCelebracaoContrato}
          td #{contrato.precoContratual}
    p Total dos Contratos: #{totalValor.toFixed(2)}
    a(href="/") Voltar à página principal
